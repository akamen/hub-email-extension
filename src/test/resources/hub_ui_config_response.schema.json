{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Hub Ui Config",
  "type": "object",
  "properties": {
    "configurationElements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "type": {
            "title": "Type",
            "type": "string",
            "enum": [
              "string",
              "boolean",
              "integer",
              "number",
              "array"
            ]
          },
          "values": {
            "title": "Values",
            "type": "array",
            "description": "the values the user provided for the configuration element",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "type",
          "values"
        ]
      }
    }
  },
  "required": [
    "configurationElements"
  ]
}
